{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile robots",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "${workspaceFolder}/libs/robocode.jar", //  Classpath argument: Points to a 'lib' directory and a specific JAR file. Separate paths with ':' on Linux/macOS and ';' on Windows.
                "${workspaceFolder}/robots/quincycoders/*.java" // Path to your Java source file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}